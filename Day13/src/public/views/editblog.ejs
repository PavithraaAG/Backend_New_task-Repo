<form method="POST" action="/updateblog">
    <label for="title">Title:</label>
    <input type="hidden" name="id" value="<%=blog[0]._id%>">
    <input type="text" id="title" name="title" value="<%=blog[0].title%>" required>
    
    <label for="content">Content:</label>
    <input type="text" id="content" name="content" rows="5" value="<%=blog[0].content%>" required>
    

    <button type="submit">Update Blog</button>
  </form>